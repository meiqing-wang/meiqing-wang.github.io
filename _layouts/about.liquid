---
layout: default
---
<div class="post">
  <article>
    <!-- Flexbox container for profile image and info -->
    <div class="profile-container">
      <!-- Profile Image Section -->
      <div class="profile-image">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
      </div>

      <!-- Profile Info Section (Name, Affiliations, etc.) -->
      <div class="profile-info">
        <h1 class="post-title">
          {% if site.title == 'blank' %}
            <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
            {{ site.last_name }}
          {% else %}
            {{ site.title }}
          {% endif %}
        </h1>
        <!-- Subtitle / Position Information -->
        <p class="desc">{{ page.profile.position }}</p>
        <p class="desc">Office: {{ page.profile.office }}</p>
        <p class="desc">Email: <a href="mailto:{{ page.profile.email }}">{{ page.profile.email }}</a></p>

        <!-- Social Media Icons Section -->
        <div class="profile-icons">
          <a href="{{ page.profile.linkedin }}" target="_blank">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="{{ page.profile.scholar }}" target="_blank">
            <i class="fas fa-graduation-cap"></i>  <!-- Google Scholar icon -->
          </a>
          <a href="{{ page.profile.orcid }}" target="_blank">
            <i class="fab fa-orcid"></i>  <!-- ORCID icon -->
          </a>
          <a href="{{ page.profile.email_link }}" target="_blank">
            <i class="fas fa-envelope"></i>
          </a>
        </div>

      </div>
    </div>

    <div class="clearfix">{{ content }}</div>

    <!-- News Section -->
    <h2 style="background-color: white;">
      <a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a>
    </h2>
    <div class="scrollable-news">  <!-- Scrollable container for news items -->
      {% if page.news and site.announcements.enabled %}
        {% assign news_count = 0 %}
        {% for item in site.news %}
          {% if news_count < 5 %}
            <div>{{ item.date }} - {{ item.title }}</div>  <!-- Display first 5 news items -->
          {% else %}
            <div class="hidden-news" style="display: none;">{{ item.date }} - {{ item.title }}</div>  <!-- Hide remaining items -->
          {% endif %}
          {% assign news_count = news_count | plus: 1 %}
        {% endfor %}
        <button id="show-more-news" style="margin-top: 10px;">Show more</button>  <!-- Button to show hidden items -->
      {% endif %}
    </div>

    <!-- Selected papers Section -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">Selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    {% if site.newsletter.enabled and site.footer_fixed %}
      {% include scripts/newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>

<!-- Add this CSS to make the news section scrollable -->
<style>
  .scrollable-news {
    max-height: 300px;  /* Set the maximum height for the news section */
    overflow-y: auto; /* Enable vertical scrolling */
    padding-right: 10px; /* Avoid overlap with scrollbar */
  }

  .scrollable-news::-webkit-scrollbar {
    width: 8px; /* Width of scrollbar for WebKit-based browsers */
  }

  .scrollable-news::-webkit-scrollbar-thumb {
    background-color: #007bff; /* Customize scrollbar color */
    border-radius: 10px;
  }

  .scrollable-news::-webkit-scrollbar-track {
    background-color: #f1f1f1; /* Track background */
  }
</style>

<!-- Add this script to reveal hidden news items when the "Show more" button is clicked -->
<script>
  document.getElementById("show-more-news").addEventListener("click", function() {
    var hiddenItems = document.querySelectorAll(".hidden-news");
    hiddenItems.forEach(function(item) {
      item.style.display = "block";
    });
    this.style.display = "none";  // Hide the "Show more" button after it's clicked
  });
</script>
